#include <stdio.h>
#include <stdlib.h>
#include <signal.h>
#include <string.h>
#include <sys/time.h>

struct node_st {
  int data; 
  struct node_st *next; 
};

struct node_st *remove_item(int num, struct node_st *list)
{
  struct node_st* current;
  struct node_st* temp;

  if(list != NULL)
    current = list; 

  if(list->data == num)
  {
    list = current->next; 
    free(current);
    return list;
  }

  while(current != NULL && current->data !=  num)
  { 
    temp = current; 
    current = current->next; 
  }

  if(current == NULL)
  {
    printf("Not Found\n");
    exit(1);
  }

  temp->next = current->next; 
  free(current); 
  return list; 
}
int main() 
{ 
  struct node_st* head = NULL; 
  struct node_st* second = NULL; 
  struct node_st* third = NULL; 
  struct node_st* fourth = NULL; 
  struct node_st* ret = NULL; 

  head = (struct node_st*)malloc(sizeof(struct node_st)); 
  second = (struct node_st*)malloc(sizeof(struct node_st)); 
  third = (struct node_st*)malloc(sizeof(struct node_st)); 
  fourth = (struct node_st*)malloc(sizeof(struct node_st)); 
  ret = (struct node_st*)malloc(sizeof(struct node_st)); 

  head->data = 3; 
  head->next = second; 
  second->data = 8; 
  second->next = third; 
  third->data = 9; 
  third->next = fourth;
  fourth->data = 10; 
  fourth->next = NULL; 

  ret = remove_item(10, head);
  printf("%i\n", ret->data);

  return 0; 
  }