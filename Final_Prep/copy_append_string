#include <stdio.h>
#include <stdlib.h>

char *copy_append_string(char *s, char *t)
{
  int i = 0;
  int j = 0; 
  char *ret_s = malloc(sizeof(s));
  while(s[i] != '\0')
  {
    ret_s[i] = s[i];
    i++;
  }
  ret_s[i++] = ' ';
  while(t[j] != '\0')
  {
    ret_s[i] = t[j];
    i++; j++;
  }
  ret_s[i] = '\0';
  return ret_s;
}

int main() 
{ 
  char s[] = "Hello"; 
  char t[] = "there";
  printf("%s \n", copy_append_string(s, t));
  return 0; 
}